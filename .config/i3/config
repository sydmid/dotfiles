bindsym $mod1+F6 exec "/home/omid/.scripts/brightness-change.sh + DP-1"


# Arandr Configs
#-------------------------------
bindsym Ctrl+Shift+1 exec --no-startup-id "xrandr --output eDP-1 --primary --mode 2560x1440 --pos 0x0 --rotate normal --output DP-1 --off --output HDMI-1 --off --output DP-2 --off --output HDMI-2 --off; nitrogen --force-setter=xinerama --restore
#HDMI (2) modes
#-------------------------------
bindsym $alt+Ctrl+Shift+2 exec --no-startup-id "xrandr --output eDP-1 --primary --mode 2560x1440 --pos 0x2160 --rotate normal --rate 60 --output DP1 --off --output DP2 --off --output HDMI1 --off --output HDMI2 --mode 3840x2160 --pos 0x0 --rotate normal --rate 60 --output VIRTUAL1 --off ; nitrogen --force-setter=xinerama --restore
bindsym $alt+Ctrl+Shift+3 exec --no-startup-id "xrandr --output eDP-1 --off --output DP1 --off --output DP2 --off --output HDMI1 --off --output HDMI2 --mode 3840x2160 --pos 0x0 --rotate normal --rate 60 --output VIRTUAL1 --off; nitrogen --force-setter=xinerama --restore
#Display Port (DP1) modes
#-------------------------------
bindsym Ctrl+Shift+2 exec --no-startup-id "xrandr --output eDP-1 --primary --mode 2560x1440 --pos 572x2160 --rotate normal --output DP-1 --mode 3840x2160 --pos 0x0 --rotate normal --output HDMI-1 --off --output DP-2 --off --output HDMI-2 --off; nitrogen --force-setter=xinerama --restore
bindsym Ctrl+Shift+3 exec --no-startup-id "xrandr --output eDP-1 --off --output DP-1 --mode 3840x2160 --pos 0x0 --rotate normal --output HDMI-1 --off --output DP-2 --off --output HDMI-2 --off; nitrogen --force-setter=xinerama --restore

