{
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.formatOnType": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"workbench.colorTheme": "Blueberry dark theme",
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmDelete": false,
	"liveServer.settings.donotVerifyTags": true,
	"git.enableSmartCommit": true,
	"window.openFoldersInNewWindow": "on",
	"window.openFilesInNewWindow": "on",
	"window.titleBarStyle": "native",
	"editor.fontSize": 15,
	"editor.fontFamily": "Input Mono Compressed",
	"files.autoSave": "afterDelay",
	"[Log]": {
		"editor.fontSize": 12
	},
	"liveServer.settings.donotShowInfoMsg": true,
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.minimap.enabled": false,
	"workbench.colorCustomizations": {
		"[Blueberry dark theme]": {
			"editor.background": "#1e1e1e",

			"activityBar.background": "#333333a2",

			"sideBarSectionHeader.background": "#00000000",
			"sideBar.background": "#252526",
			"sideBar.dropBackground": "#53595d80",

			"tab.activeBackground": "#1e1e1e",
			"tab.inactiveBackground": "#2d2d2d",
			"tab.unfocusedActiveBackground": "#1e1e1e",
			"tab.unfocusedInactiveBackground": "#2d2d2d",

			"statusBar.background": "#007acc",
			"statusBar.debuggingBackground": "#cc6633",
			"statusBar.noFolderBackground": "#333333a2",
			"statusBarItem.activeBackground": "#ffffff2e",
			"statusBarItem.errorBackground": "#c72e0f",
			"statusBarItem.hoverBackground": "#ffffff1f",
			"statusBarItem.prominentBackground": "#00000080",
			"statusBarItem.prominentForeground": "#ffffff",
			"statusBarItem.prominentHoverBackground": "#0000004d",
			"statusBarItem.errorForeground": "#ffffff",
			"statusBar.debuggingForeground": "#ffffff",
			"statusBar.noFolderForeground": "#ffffff",
			"statusBar.foreground": "#ffffff",

			"editorGroupHeader.noTabsBackground": "#1e1e1e",
			"editorGroupHeader.tabsBackground": "#252526",

			"editorCursor.background": "#ffff4d",
			"editorCursor.foreground": "#ffff4d",

			"scrollbarSlider.activeBackground": "#31ae8436",
			"scrollbarSlider.background": "#31AE8480",
			"scrollbarSlider.hoverBackground": "#27E8A780"
		}
	},
	"window.menuBarVisibility": "toggle",
	"files.exclude": {
		"package-lock.json": true,
		"yarn.lock": true,
		"Pipfile.lock": true,
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"node_modules": true,
		"**/__pycache__": true,
		"**/.idea": true,
		"**/.pytest_cache": true
	},
	"window.title": "vscode ${activeEditorShort}",
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"[python]": {
		"editor.rulers": [79],
		"editor.wordWrap": "on",
		"editor.quickSuggestions": true
	},
	"workbench.editor.tabCloseButton": "off",
	"workbench.settings.editor": "json",
	"breadcrumbs.symbolPath": "off",
	"workbench.editorAssociations": {
		"*.ipynb": "jupyter.notebook.ipynb"
	},
	"editor.suggestSelection": "first",
	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
	"python.defaultInterpreterPath": "/bin/python",
	"jupyter.jupyterServerType": "local",
	"hungryDelete.enableSmartBackspace": false,
	"macros": {
		"resetWorkspace": [
			"workbench.action.closeAllEditors",
			"workbench.files.action.collapseExplorerFolders"
		],
		"commentLineGoDown": ["editor.action.commentLine", "cursorDown"]
	},
	"prettier.useTabs": true,
	"prettier.tabWidth": 4,
	"prettier.singleQuote": true,
	"workbench.startupEditor": "none",
	"projectManager.git.baseFolders": ["/home/omid/Documents/Projects"],
	"terminal.integrated.fontFamily": "monospace",
	"terminal.integrated.fontSize": 12,
	"terminal.integrated.lineHeight": 1,
	"files.associations": {
		"*.py": "python"
	}
}
