# shortcut applications
#-------------------------------
bindsym $mod1+Return                exec --no-startup-id tdrop --y-offset=1%  -w 48% -h 48% --x-offset=49% -mat -n 1 --class=dterminal kitty
bindsym $mod1+e                     exec --no-startup-id tdrop --y-offset=1%  -w 48% -h 48% --x-offset=1%  -mat -n 2 --class=dfilemanager kitty -e 'ranger'
bindsym $mod1+n                     exec --no-startup-id tdrop --y-offset=49% -w 48% -h 48% --x-offset=49% -mat -class=dleafpad leafpad
bindsym $mod1+w                     workspace $ws3; exec google-chrome-stable
bindsym $mod1+Shift+e               exec pcmanfm -n /home/omid --no-desktop
bindsym Print                       exec --no-startup-id i3-scrot
bindsym $mod1+Print       --release exec --no-startup-id i3-scrot -s
bindsym $mod1+Ctrl+Print  --release exec --no-startup-id i3-scrot -sc
bindsym $mod1+Ctrl+x      --release exec --no-startup-id xkill
bindsym $mod1+Shift+b               exec --no-startup-id blurlock

# font for window titles and bar
#-------------------------------
font pango:System San Francisco Display 12

# Containers Title alignment
#-------------------------------
title_align center

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
#-------------------------------
set $mod1 Mod4
set $mod2 Mod1

# keys for focus, movement, and resize directions
#-------------------------------
